---
import GlassCard from "./GlassCard.astro";


export interface Props {
    cardTitle: string,
    cardDescription: string,
    heroBg: string,
    singlePost?: boolean,
}

const {cardTitle, cardDescription, heroBg, singlePost=false} = Astro.props as Props

---


<section class={singlePost? 'mt-0 single-post' : 'hero mt-0'} style={`background-image: url(${heroBg})`}>
    <div class="container relative">
        <GlassCard >
            <h1>{cardTitle}</h1>
            <p>{cardDescription}</p>
            <slot />
        </GlassCard>
        <slot name="arts" />
        
    </div>
</section>

<style lang="scss" >
     @import '../styles/global.scss';

    .hero, .single-post {
        width: 100%;
        background-size: cover;
        height: 46.222rem;
        display: flex;
        align-items: center; 
    }

    h1 {
        font-family: 'Emblema One';
        font-weight: 400;
        font-size: 5.333rem;
        line-height: 6.389rem;
        letter-spacing: -0.05em;
        text-transform: uppercase;
        color: $CLJ-Primary-400;
        text-shadow: 1px 5px 2px rgba(0, 0, 0, 0.2);
    }
    p {
        color: white;
        font-size: 1.111rem;
        line-height: 1.556rem;
        max-width: 24.333rem;
    }

    .single-post {
        box-shadow: inset 0 0 0 100vmax rgb(14 14 14 / 84%);

        .container {
            justify-content: center;
        }

        h1 {
            font-size: 2.222rem;
            line-height: 2.667rem;
            letter-spacing: -0.05em;
            text-transform: capitalize;
        }

        p {
            max-width: 100%;
        }
    }
</style>