---
import GlassCard from "./GlassCard.astro";


export interface Props {
    cardTitle: string,
    cardDescription: string,
    heroBg: string,
    art?: string[],
}

const {cardTitle, cardDescription, heroBg, art} = Astro.props as Props

---


<section class="hero mt-0" style={`background-image: url(${heroBg})`}>
    <div class="container relative">
        <GlassCard >
            <h1>{cardTitle}</h1>
            <p>{cardDescription}</p>
        </GlassCard>
        <slot />
    </div>
</section>

<style lang="scss">
     @import '../styles/global.scss';

    .hero {
        width: 100%;
        background-size: cover;
        height: 46.222rem;
        display: flex;
        align-items: center; 
    }

    h1 {
        font-family: 'Emblema One';
        font-weight: 400;
        font-size: 5.333rem;
        line-height: 6.389rem;
        letter-spacing: -0.05em;
        text-transform: uppercase;
        color: $CLJ-Primary-400;
        text-shadow: 1px 5px 2px rgba(0, 0, 0, 0.2);
    }
    p {
        color: white;
        font-size: 1.111rem;
        line-height: 1.556rem;
        max-width: 24.333rem;
    }
</style>