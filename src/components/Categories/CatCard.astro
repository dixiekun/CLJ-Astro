---
import dashline from '../../images/icons/dashline.svg'

export interface Props {
    title: string,
    description: string,
    imageUrl: string,
}

const {title, imageUrl, description} = Astro.props as Props
---
<a href="#">
<div class="category-card">
        <div class="blur"></div>
        <img class="dashline" src={dashline} alt="">
        <h3>{title}</h3>
        <p>{description}</p>
        <img src={imageUrl} alt={title}>
</div>
</a>
<style lang="scss">
    .category-card {
        border: 1px solid #F9F9F9;
        filter: drop-shadow(0px 4px 6px rgba(0, 0, 0, 0.2));
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        width: 34.889rem;
        height: 11.111rem;
        max-width: 100%;
        display: grid;
        place-items: center;

        h3 {
            color: white;
            font-weight: 700;
            font-size: 1.778rem;
            transition: all 0.2s ease-in;
        }

        p {
            position: absolute;
            transform: translateY(-400%);
            font-size: 24px;
            color: white;
            transition: all 0.3s ease-in;
            text-align: center;
        }

        img {
            position: absolute;
            z-index: -1;
        }

        img.dashline {
            position: absolute;
            width: 100%;
            max-width: 564px;
            height: 100%;
            transform: scale(2);
            z-index: 1;
            transition: all 0.3s ease-in;
        }

        .blur {
            position: absolute;
            width: 100%;
            height: 100%;
            background: rgba(196, 196, 196, 0.22);
            backdrop-filter: blur(4px);
            transform:scale(0);
            transition: all 0.2s ease-in;
        }

        &:hover, &:focus {
            h3 {
            transform: translateY(400%);
            position: absolute;
            }

            p {
                position: relative;
                transform: translateY(0);
            }

            img.dashline {
                transform: scale(1);
            }

            .blur {
                transform:scale(1);
            }
        }
    }
</style>